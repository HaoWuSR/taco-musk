.container {
    padding: 0;
    background: #f8f8f8;
  }
  
  .banner {
    width: 100%;
    height: 550rpx;
    background: linear-gradient(to right, #ffb6c1, #87ceeb);
    position: relative;
  }
  
  .banner-image {
    width: 100%;
    height: 100%;
  }
  
  .feature-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20rpx;
    padding: 20rpx;
    background: #fff;
    margin-top: -50rpx;
    border-radius: 30rpx 30rpx 0 0;
    position: relative;
  }
  
  .feature-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20rpx;
  }
  
  .feature-icon {
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 10rpx;
  }
  
  .feature-name {
    font-size: 24rpx;
    color: #333;
  }
  
  .discovery-section {
    padding: 20rpx;
    background: #fff;
  }
  
  .section-header {
    margin-bottom: 20rpx;
  }
  
  .section-title {
    font-size: 32rpx;
    /* font-weight: bold; */
  }
  
  .discovery-list {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
  }
  
  .discovery-item {
    flex: 1;
    background: #fff;
    border-radius: 50rpx;
    overflow: hidden;
    position: relative;
    width: calc(50% - 10rpx);
    aspect-ratio: 1/1.2;
  }
  
  .discovery-item image {
    width: 100%;
    height: 300rpx;
  }
  
  .item-info {
    padding: 20rpx;
  }
  
  .item-title {
    font-size: 28rpx;
    font-weight: bold;
  }
  
  .item-desc {
    font-size: 24rpx;
    color: #666;
    margin-top: 10rpx;
  }

  .discovery-flex {
    display: flex;
    flex-direction: row; 
    justify-content: space-between; 
    gap: 20rpx; 
  }

  .discovery-item:active {
    opacity: 0.8;
    transform: scale(0.98);
  }

  .card-flex {
    display: flex;
    justify-content: space-between;
    gap: 30rpx; 
    padding: 0 10rpx;  
    margin-top: 40rpx; 
    width: 100%;
    box-sizing: border-box;
  }

  .nav-image {
    flex: 1;
    height: 250rpx;
    border-radius: 30rpx;
    object-fit: cover;
  }

  .purple {
    background: linear-gradient(to right, #a18cd1, #bfb8e5);
  }

  .image-container {
    position: relative;
    width: 45%;
    margin-bottom: 10px;
    margin: 2.5%;
  }

  .grid-image {
    width: 100%;
    height: 300rpx;
    border-radius: 8px;
  }

  .like-container {
    position: absolute;
    bottom: 10px;
    right: 10px;
    background-color: rgba(0, 0, 0, 0.5);
    border-radius: 20px;
    padding: 5px 10px;
    z-index: 1;
  }

  .like-button {
    display: flex;
    align-items: center;
    gap: 5px;
  }

  .like-icon {
    width: 40rpx;
    height: 40rpx;
  }

  .like-count {
    color: white;
    font-size: 14px;
  }

  .liked .like-icon {
    animation: pulse 0.3s ease;
  }

  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.2); }
    100% { transform: scale(1); }
  }

  .loading {
    text-align: center;
    padding: 20px;
    color: #999;
  }
  .image-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    width: 100%;
    padding: 10rpx;
    box-sizing: border-box;
  }

  .image-item {
    width: 50%;
    padding: 10rpx;
    box-sizing: border-box;
    position: relative;
  }

  .image-item image {
    width: 45vw;
    border-radius: 8rpx;
    transition: all 0.3s ease;
  }

  .image-item .enlarged {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 90vw;
    height: auto;
    z-index: 999;
  }

