.login-modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 999;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .login-content {
    background: white;
    border-radius: 12rpx;
    padding: 40rpx;
    width: 80%;
    max-width: 600rpx;
  }
  
  .login-title {
    font-size: 36rpx;
    font-weight: bold;
    text-align: center;
    margin-bottom: 20rpx;
  }
  
  .login-desc {
    font-size: 28rpx;
    color: #666;
    text-align: center;
    margin-bottom: 40rpx;
  }
  
  .login-btn {
    background: #07c160;
    color: white;
    border-radius: 8rpx;
  }

  .load-more.pulling {
    color: #007AFF;
    font-weight: bold;
    transform: scale(1.05);
    transition: all 0.3s ease;
  }