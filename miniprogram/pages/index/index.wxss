    text-align: center;
  } */

  .load-more {
    text-align: center;
    padding: 40rpx;
    margin-bottom: 40rpx;
    color: #666;
    font-size: 28rpx;
  }

  .mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.7);
    z-index: 999;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .enlarged-container {
    width: 90%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .enlarged-container image {
    width: 100%;
    border-radius: 8rpx;
  }

  .enlarged-desc {
    font-size: 32rpx;
    color: #fff;
    margin-top: 20rpx;
    text-align: center;
    padding: 0 20rpx;
  }


  .image-item .enlarged {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 90vw;
    height: auto;
    z-index: 999;
  }


  .section-divider {
    margin: 40rpx 20rpx 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .divider-line {
    flex: 1;
    height: 2rpx;
    background: linear-gradient(to right, transparent, #ddd, transparent);
  }
  .tab-bar {
    display: flex;
    justify-content: center;
    margin: 20rpx 0;
    padding: 10rpx;
    background-color: #f8f8f8;  
}

.tab-item {
    padding: 15rpx 40rpx;
    margin: 0 20rpx;
    border-radius: 30rpx;
    font-size: 28rpx;
    color: #000000;  /* 未选中时为黑色文字 */
    background: #ffffff;  /* 未选中时为白色背景 */
    transition: all 0.3s;
    border: 1rpx solid #e0e0e0;  
}

.tab-item.active {
    background: #000000;  /* 选中时为黑色背景 */
    color: #ffffff;  /* 选中时为白色文字 */
    border: 1rpx solid #000000;  /* 边框也变成黑色 */
}

