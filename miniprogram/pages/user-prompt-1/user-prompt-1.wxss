.user-prompt {
    padding: 30rpx 0;
  }
  
  .description-text {
    font-size: 32rpx;
    color: #333;
    padding: 0 40rpx 30rpx;
    font-weight: bold;
  }
  
  .prompt-swiper {
    width: 100%;
    height: 1020rpx;
    margin-top: 50rpx;
  }
  
  .prompt-option {
    margin: 0 15rpx;
    height: 1000rpx;
    background: #ffffff;
    border-radius: 12rpx;
    overflow: hidden;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    transform: scale(0.9);
  }
  
  .prompt-option.selected {
    border: 4rpx solid #3498db;
    transform: scale(1);
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  }
  
  .option-text {
    display: block;
    padding: 16rpx;
    font-size: 28rpx;
    color: #333;
    background: rgba(255, 255, 255, 0.9);
    text-align: center;
  }
  
  .option-image {
    width: 100%;
    height:940rpx;
    object-fit: cover;
    object-position: center;
  }
  
  .confirm-btn {
    margin: 40rpx 30rpx 0;
  }
  
  .nav-buttons {
    display: flex;
    justify-content: space-around;
    padding: 20rpx;
    background: #f5f5f5;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  }
  
  .nav-btn {
    padding: 15rpx 30rpx;
    border-radius: 30rpx;
    font-size: 28rpx;
    background: #ffffff;
    color: #666;
    box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
  }
  
  .nav-btn.current {
    background: #4CAF50;
    color: white;
  }